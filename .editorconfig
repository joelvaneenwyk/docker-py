root = true

[*]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 80

[*.md]
trim_trailing_whitespace = false
indent_size = 1

[*.{yaml,yml}]
indent_size = 2

[*.{json}]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 4
