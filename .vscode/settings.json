{
    "[markdown]": {
        "editor.formatOnSave": false,
        "editor.formatOnPaste": false,
        "editor.unicodeHighlight.ambiguousCharacters": false,
        "editor.unicodeHighlight.invisibleCharacters": false,
        "editor.wordWrap": "on",
        "editor.quickSuggestions": {
            "comments": "off",
            "strings": "off",
            "other": "off"
        },
        "cSpell.fixSpellingWithRenameProvider": true,
        "cSpell.advanced.feature.useReferenceProviderWithRename": true,
        "cSpell.advanced.feature.useReferenceProviderRemove": "/^#+\\s/"
    },
    "files.associations": {
        "Dockerfile*": "dockerfile",
        ".coveragerc": "ini",
        "MANIFEST*": "automake"
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true,
        "**/.vscode-test": true,
        "**/.mypy_cache": true,
        "**/.pytest_cache": true,
        "**/.tox": true,
        "**/.tmp": true
    },
    "taskExplorer.exclude": [
        "**/.vscode-test/**",
        "**/.mypy_cache/**",
        "**/.pytest_cache/**",
        "**/.tmp/**",
        "**/.tox/**",
        "**/Assets/**",
        "**/bin/**",
        "**/build/**",
        "**/dist/**",
        "**/doc/**",
        "**/example/**",
        "**/examples/**",
        "**/ext/**",
        "**/obj/**",
        "**/out/**",
        "**/output/**",
        "**/packages/**",
        "**/release/**",
        "**/releases/**",
        "**/samples/**",
        "**/sdks/**",
        "**/static/**",
        "**/target/**",
        "**/test/**",
        "**/third_party/**",
        "**/vendor/**",
        "**/work/**"
    ],
    "taskExplorer.enabledTasks": {
        "ant": false,
        "appPublisher": false,
        "bash": true,
        "batch": true,
        "composer": false,
        "gradle": false,
        "grunt": false,
        "gulp": false,
        "make": true,
        "maven": false,
        "npm": false,
        "nsis": false,
        "perl": false,
        "pipenv": true,
        "powershell": false,
        "python": true,
        "ruby": false,
        "tsc": false,
        "workspace": true
    },
    //--------------------------
    // Python
    //--------------------------
    "[python]": {
        "editor.formatOnSave": false,
        "editor.formatOnPaste": false,
        "editor.defaultFormatter": "ms-python.python",
        "editor.codeActionsOnSave": {
            "source.organizeImports": true,
            "python.sortImports": true
        }
    },
    "isort.args": [
        "--settings-path=pyproject.toml"
    ],
    "python.languageServer": "Pylance",
    "python.terminal.activateEnvironment": true,
    "python.terminal.activateEnvInCurrentTerminal": true,
    "python.terminal.launchArgs": [],
    "python.formatting.provider": "autopep8", // "black"
    "python.formatting.autopep8Args": [
        "--global-config",
        "${workspaceFolder}/pyproject.toml",
        "--experimental",
        "--pep8-passes",
        "2000",
        "--max-line-length",
        "130"
    ],
    "autoDocstring.docstringFormat": "google",
    "python.formatting.blackArgs": [
        "-line-length",
        "130"
    ],
    "python.analysis.inlayHints.functionReturnTypes": true,
    "python.analysis.inlayHints.variableTypes": true,
    "python.analysis.typeCheckingMode": "basic",
    "python.linting.enabled": true,
    "python.linting.flake8Args": [
        "--config",
        "${workspaceFolder}/tox.ini"
    ],
    "python.linting.flake8Enabled": true,
    "python.linting.mypyArgs": [
        "--no-pretty",
        "--config-file",
        "${workspaceFolder}/pyproject.toml"
    ],
    "python.linting.mypyEnabled": true,
    "python.linting.pycodestyleArgs": [
        "--config=${workspaceFolder}/tox.ini"
    ],
    "python.linting.pycodestyleEnabled": false,
    "python.linting.pydocstyleEnabled": false,
    "python.linting.pylintEnabled": true,
    "pylint.importStrategy": "fromEnvironment",
    "pylint.path": [
        "python",
        "-B",
        "-m",
        "pylint"
    ],
    "pylint.args": [
        "--rcfile=${workspaceFolder}/pyproject.toml"
    ],
    "pylint.logLevel": "error",
    "pylint.severity": {
        "convention": "Warning",
        "error": "Error",
        "fatal": "Error",
        "refactor": "Warning",
        "warning": "Warning",
        "info": "Warning"
    },
    "python.testing.pytestArgs": [
        "-c=${workspaceFolder}/tox.ini"
    ],
    "python.testing.pytestEnabled": true,
    "python.testing.unittestEnabled": false,
    // General
    "cSpell.words": [
        "devcontainer",
        "devcontainers",
        "dhoeric",
        "isort",
        "lukewiwa",
        "mypy",
        "Npipe",
        "oleksis",
        "pipenv",
        "pylint",
        "pysocket",
        "redef",
        "shellcheck",
        "stuartleeks",
        "withfig"
    ]
}
